<p style="color: green"><%= notice %></p>

<%= render @brewery %>

  <p>
    <% if @brewery.ratings.empty? %>
      Brewery has not yet been rated!
    <% else %>
      Brewery has
      <%= @brewery.ratings.count %> <%= "rating".pluralize(@brewery.ratings.count) %> 
      with an average of 
      <%= @brewery.average_rating %>
    <% end %>
  </p>

  <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), data: {turbo_method: "post"}, class: "btn btn-primary" %>

<div>
  <%= link_to 'Back to breweries', breweries_path, class:'btn btn-info' %>
  <%= edit_and_destroy_buttons(@brewery) %>
   <%= button_to "Destroy this brewery", @brewery, method: :delete if current_user %>
</div>
