<h1>Ratings</h1>


<div class="container text-center">
  <div class="row">
    <div class="col">
      <h2>Best breweries</h2>
      <table class="table-hover">
        <thead>
          <tr>
            <th scope="col">Brewery</th>
            <th scope="col">Average</th>
          </tr>
        </thead>
        <% @top_breweries.each do |brewery| %>
          <tr>
            <td><%= brewery.name %></td>
            <td><%= round(brewery.average_rating) %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col">
      <h2>Best beers</h2>
      <table class="table-hover">
        <thead>
          <tr>
            <th scope="col">Beer</th>
            <th scope="col">Average</th>
          </tr>
        </thead>
        <% @top_beers.each do |beer| %>
          <tr>
            <td><%= beer.name %></td>
            <td><%= round(beer.average_rating) %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col">
      <h2>Best styles</h2>
      <table class="table-hover">
        <thead>
          <tr>
            <th scope="col">Style</th>
            <th scope="col">Average</th>
          </tr>
        </thead>
        <% @top_styles.each do |style| %>
          <tr>
            <td><%= style.name %></td>
            <td><%= round(style.average_rating) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Recent Ratings</h2>
      <ul>
        <% @recents.each do |rat| %>
          <li><%= rat.to_s %> by <%= rat.user.username %></li>
        <% end %>
      </ul>
    </div>
    <div class="col">
      <h2>Most active users</h2>
      <ul>
        <% @active_users.each do |user| %>
          <li><%= user.username %> <%= user.ratings.count %> ratings</li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
