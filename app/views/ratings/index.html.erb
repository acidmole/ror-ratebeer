<h1>Ratings</h1>


<div class="container text-center">
  <div class="row">
    <div class="col">
      <h2>Best breweries</h2>
      <table class="table-hover">
        <thead>
          <tr>
            <th scope="col">Brewery</th>
            <th scope="col">Average</th>
          </tr>
        </thead>
        <% @top_breweries.each do |brewery| %>
          <tr>
            <td><%= brewery.name %></td>
            <td><%= round(brewery.average_rating) %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col">
      <h2>Best beers</h2>
      <table class="table-hover">
        <thead>
          <tr>
            <th scope="col">Beer</th>
            <th scope="col">Average</th>
          </tr>
        </thead>
        <% @top_beers.each do |beer| %>
          <tr>
            <td><%= beer.name %></td>
            <td><%= round(beer.average_rating) %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col">
      <h2>Best styles</h2>
      <table class="table-hover">
        <thead>
          <tr>
            <th scope="col">Style</th>
            <th scope="col">Average</th>
          </tr>
        </thead>
        <% @top_styles.each do |style| %>
          <tr>
            <td><%= style.name %></td>
            <td><%= round(style.average_rating) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h2>Recent Ratings</h2>
      <table class="table table-striped table-hover">
        <thead>
          <th scope="col">Beer</th>
          <th scope="col">Rating</th>
          <th scope="col">Time</th>
          <th scope="col">User</th>
        </thead>          
        <% @recents.each do |rat| %>
          <tr>
            <td><%= rat.beer.name %></td>
            <td><%= rat.score %></td>
            <td><%= rat.created_at %></td>
            <td><%= rat.user.username %></td>
          </tr>
        <% end %>
      </table>

    </div>
    <div class="col">
      <h2>Most active users</h2>
      <table class="table table-striped table-hover">
        <thead>
          <th scope="col">User</th>
          <th scope="col">Count</th>
        </thead>          
        <% @active_users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.ratings.count %> ratings</td>
          </tr>
        <% end %>
      </table>
      </ul>
    </div>
  </div>
</div>
